#compdef git-commit
local i
i=2
while ((i <= CURRENT))
do	[[ $words[i] != -- ]] && {
		((++i))
		continue
	}
	((++i))
	break
done
if ((i <= CURRENT))
then	shift $((i-1)) words
	words=(git commit $words)
	((CURRENT-=i-3))
	_normal
	return
fi
_arguments -s -S : \
'(-)'{'-h','-H'}'[help]' \
'-t[Set GPG_TTY to current tty]' \
'-T[Do not modify GPG_TTY]'
